{
  "name": "lz-ts-template",
  "version": "0.0.0",
  "author": "Luke Zilioli (elzee08@gmail.com)",
  "main": "$npm_package_config_appPaths_buildFolder/lib/index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/lzilioli/lz-ts-template.git"
  },
  "bugs": {
    "url": "https://bitbucket.org/lzilioli/lz-ts-template/issues?status=new&status=open"
  },
  "scripts": {
    "build": "gulp build",
    "dev": "NODE_ENV=development gulp dev",
    "lint-fix": "gulp lint --fix",
    "lint": "gulp lint",
    "start-dev": "DEBUG=lz-ts-template* NODE_ENV=development nodemon -w ./package.json -w ./build -e \"md js css json\" $npm_package_config_appPaths_buildFolder/server/index.js",
    "start": "node $npm_package_config_appPaths_buildFolder/server/index.js",
    "test": "node_modules/.bin/mocha $npm_package_config_appPaths_buildFolder/tests/index.js",
    "update-readme": "mdmacros README.tmpl.md README.md"
  },
  "bin": {
    "lztstemplate": "$npm_package_config_appPaths_distFolder/bin/index.js"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "config": "^3.3.3",
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.4",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@lzilioli/md-macros": "^2.0.2",
    "@types/express": "^4.17.6",
    "@types/express-handlebars": "^3.1.0",
    "@types/mocha": "^7.0.2",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "css-loader": "^3.5.3",
    "eslint": "^7.0.0",
    "gulp": "^4.0.2",
    "gulp-copy": "^4.0.1",
    "gulp-eslint": "^6.0.0",
    "gulp-if": "^3.0.0",
    "gulp-rimraf": "^1.0.0",
    "gulp-todo": "^7.1.1",
    "handlebars": "^4.7.6",
    "handlebars-loader": "^1.7.1",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^7.1.2",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.3",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "ts-loader": "^7.0.3",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2",
    "webpack-stream": "^5.2.1"
  },
  "config": {
    "appPaths": {
      "buildFolder": "build",
      "distFolder": "build/dist",
      "publicDistFolder": "build/dist/assets",
      "codeFolder": "code",
      "binaryFolder": "bin",
      "clientFolder": "client",
      "libFolder": "lib",
      "sassFolder": "client/sass",
      "serverFolder": "server",
      "testsFolder": "tests",
      "publicFolder": "assets",
      "webpackConfigsFolder": "webpack-configs",
      "viewsFolder": "views",
      "viewsLayoutsFolder": "layouts",
      "viewsPartialsFolder": "partials"
    }
  }
}
